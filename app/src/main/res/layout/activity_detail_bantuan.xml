<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailBantuan">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/namaakun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prihatma Faza"
                            android:textAlignment="textStart"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/golcaridet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Goldar"
                            android:textAlignment="textEnd"
                            android:textStyle="bold" />

                    </LinearLayout>



                    <TextView
                        android:id="@+id/tanggalan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="10 Januari 20129"
                        android:textSize="8dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/line" />

                    <TextView
                        android:id="@+id/judul"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dibutuhkan Segera"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Deskripsi"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/line" />

                    <TextView
                        android:id="@+id/deskripsidetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkk" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/line" />

                    <TextView
                        android:id="@+id/alamatdetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jalan Brigadir sentot Semarang No 15 "
                        android:textAlignment="center" />

                    <fragment
                        android:id="@+id/mapfrag"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:name="com.google.android.gms.maps.SupportMapFragment"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/logoverif"
                            android:padding="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/logoverif"
                            />

                        <Button
                            android:id="@+id/btn_bantu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tawarkan Bantuan" />

                    </LinearLayout>


                </LinearLayout>


            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>



</LinearLayout>